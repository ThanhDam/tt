<!DOCTYPE html>
<html ng-app="ktx">
<head>
    <title>KTX Đại Học Công Nghiệp</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" type="text/css" href="https://meganet.com.vn/bootstrap_mkt/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="https://meganet.com.vn/bootstrap_mkt/fonts/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" type="text/css" href="/template/926/style.css">

    <script type="text/javascript" src="https://meganet.com.vn/bootstrap_mkt/jquery.min.js"></script>
    <script type="text/javascript" src="https://meganet.com.vn/bootstrap_mkt/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="/template/926/angular.min.js"></script>

</head>
<body ng-controller="ktxCtrl">
    <nav class="navbar navbar-default cus-header">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="true" >
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="/template/926/logo_ktx.png" height="40" class="navbar-left" style="margin-top: 5px; float: left">
                <a class="navbar-brand hidden-xs" href="#" style="margin-left: 0px">
                    KTX ĐẠI HỌC CÔNG NGHIỆP
                </a>
                <a class="navbar-brand visible-xs" href="#" style="margin-left: 0px">
                    KTX ĐH CN
                </a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="menu" data-toggle="modal" data-target="#price">
                            <span class="hidden-md">BẢNG GIÁ CƯỚC</span>
                            <span class="visible-md">GIÁ CƯỚC</span>
                        </a>
                    </li>
                    <li>
                        <a href="http://content.meganet.com.vn:8080/ktx/hdsd_new.pdf" class="menu" target="_blank">
                            <span class="hidden-md">HƯỚNG DẪN SỬ DỤNG</span>
                            <span class="visible-md">HƯỚNG DẪN</span>
                        </a>
                    </li>
                    <li><a href="#" class="menu" data-toggle="modal" data-target="#support">LIÊN HỆ</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="carouselLaptop" class="carousel slide carouselLaptop hidden-xs hidden-sm" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="slideLaptop" style="background-image: url('/template/926/laptop1.jpg');">
                </div>
            </div>
            <div class="item" ng-repeat="item in carousel.laptop track by $index">
                <div class="slideLaptop" style="background-image: url('/template/926/{{item}}');">
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carouselLaptop" role="button" data-slide="prev" style="width: 6% !important" ng-show="carousel.laptop.length">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carouselLaptop" role="button" data-slide="next" style="width: 6% !important" ng-show="carousel.laptop.length">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="main">
        <div class="col-xs-12">
            <div class="col-md-12 padding-0">
                <div id="carouselMobile" class="carousel slide visible-xs visible-sm" data-ride="carousel">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="/template/926/mobile1.jpg" class="visible-xs visible-sm" width="100%">
                        </div>
                         <div class="item" ng-repeat="item in carousel.mobile track by $index">
                            <img src="/template/926/{{item}}" class="visible-xs visible-sm" width="100%">
                        </div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carouselMobile" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carouselMobile" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <form method="POST" action="/wifi/login" class="form-login form-inline" id="form-login">
                    <div class="form-group visible-xs" style="text-align: right;">
                        <button type="button" class="btn btn-login btn-primary fbBtn" style="">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                            <span class="">Đăng Nhập bằng FACEBOOK </span>
                        </button>
                    </div>
                    <div class="form-group">
                        <input type="text" name="username" class="form-control" id="email" placeholder="Email đăng nhập">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <input type="hidden" name="redirect" value="https://meganet.com.vn">
                    <div class="form-group">
                        <button type="submit" class="btn btn-login btn-warning">
                            <span class="glyphicon glyphicon-log-in"></span> Đăng Nhập
                        </button>
                        <span class="hidden-xs hidden-sm" style="color: #fff">hoặc</span>
                        <button type="button" class="btn btn-login btn-primary hidden-xs fbBtn">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                            <span class="">Đăng Nhập <span class="hidden-sm">bằng</span> FACEBOOK</span>
                        </button>
                    </div>
                    <div id="error" style="display: none;"></div>
                </form>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom cus-bottom">
        <span class="text-left hidden-xs">
            <img src="/template/926/logo.png" style="margin-bottom: 3px">
        </span>
        <span class="text-left visible-xs">
            <img src="/template/926/logo_mobile.png" style="margin-bottom: 3px">
        </span>
        <span class="text-right hidden-xs">
            Liên hệ kỹ thuật: 
                <span style="font-size: 20px;">
                    <a href="tel:{{employers[0].phone}}" class="tel" style="color: #fff">{{employers[0].phone}}</a> - ({{employers[0].name}})
                </span>
        </span>
        <span class="text-right visible-xs">
            <span style="font-size: 15px;">
                <a href="tel:{{employers[0].phone}}" class="tel">{{employers[0].phone}} - ({{employers[0].name}})</a>
            </span>
        </span>
    </nav>
    
    <div class="modal fade" tabindex="-1" role="dialog" id="price">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">BẢNG GIÁ CƯỚC</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <tr class="price-table">
                            <th>LOẠI THẺ</th>
                            <th>GIÁ CƯỚC</th>
                            <th>LƯU LƯỢNG</th>
                            <th class="hidden-xs">DOWNLOAD</th>
                            <th class="hidden-xs">UPLOAD</th>
                        </tr>
                        <tr ng-repeat="price in prices" class="price-table">
                            <td style="font-weight: bold; font-size: 20px">{{price.name}}</td>
                            <td style="font-weight: bold;">{{price.price | number:0}}</td>
                            <td>{{price.limit}}</td>
                            <td class="hidden-xs">Băng thông 8 Mbps</td>
                            <td class="hidden-xs">Tối thiểu 2 Mbps</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="support">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">HỖ TRỢ KỸ THUẬT</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                         <tr class="hidden-xs">
                            <td colspan="2" style="font-weight: bold;">
                                <h3>Hỗ trợ dịch vụ</h3>
                            </td>
                        </tr>
                        <tr ng-repeat="employer in employers">
                            <td style="font-weight: bold;">
                                <h5>{{employer.name}}</h5>
                            </td>
                            <td style="font-weight: bold;">
                                <h4><a href="tel:{{employer.phone}}">{{employer.phone}}</h4>
                            </td>
                        </tr>
                        <tr class="hidden-xs">
                            <td colspan="2" style="font-weight: bold;">
                                <h3>Khiếu nại chất lượng</h3>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">
                                <h5>Mr. Phong</h5>
                            </td>
                            <td style="font-weight: bold;">
                                <h4><a href="tel:0981 060 067">0981 060 067</a></h4>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">196/26-28 Cộng Hòa, P.12, Q.Tân Bình , TPHCM - VIỆT NAM</td>
                        </tr>
                        <tr>
                            <td colspan="2">Hotline: (08) 7303 7676, <a href="mailto:info@meganet.com.vn">info@meganet.com.vn</a></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="alert alert-danger alert-dismissible alertError" role="alert" ng-if="error">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Lỗi!</strong> {{error}}
    </div>
<script>
    angular.module('ktx', [])
    .controller('ktxCtrl', ['$scope', function ($scope) {
        $scope.prices = [
            {"name":"1GB","price":10000,"limit":"Giới hạn 30 ngày"},
            {"name":"5GB","price":40000,"limit":"Giới hạn 30 ngày"},
            {"name":"1 NGÀY","price":5000,"limit":"Không giới hạn"},
            {"name":"1 TUẦN","price":30000,"limit":"Không giới hạn"},
            {"name":"1/2 THÁNG","price":50000,"limit":"Không giới hạn"},
            {"name":"1 THÁNG","price":80000,"limit":"Không giới hạn"}
        ];
        $scope.employers = [
            {"name":"Mr. Chương","phone":"0935 837 504"}
        ];
        $scope.error = $("#error").html();
        function goToByScroll(id){
            id = id.replace("link", "");
            $('html,body').animate({
                scrollTop: $("#"+id).offset().top
            }, 'slow');
        }
        $scope.carousel = {
            laptop: ['laptop.jpg'],
            mobile: ['mobile.jpg']
        }
        var showLogin = false;
        $("#show-form-login").click(function() {
            if (showLogin == true) {
                $("#form-login").fadeOut('slow');
                showLogin = false;
            } else {
                $("#form-login").fadeIn('slow');
                showLogin = true;
            }
        })
        var url = "https://meganet.com.vn/";
        var loginParams = $.param({
            client_id: '811307329037478',
            response_type: 'code',
            scope: 'email',
            redirect_uri: 'http://wifiktx.meganet.com.vn:3992/wifi/fb?redirectUrl=' + encodeURIComponent(url)
        });
        
        var loginURL = "https://www.facebook.com/v2.8/dialog/oauth?" + loginParams;
        $(".fbBtn").click(function(){
            window.location = loginURL;
        })
    }]);
</script>
</body>
</html>